<h1>Edit a Course<h1>

<form method="POST" action="/courses/<%= @course.id %>">
  
  <input id="hidden" type="hidden" name="_method" value="PATCH"><br>

  <label for="name">Name: </label>
  <input type="text" name="course[name]" value="<%= @course.name %>"><br>

  <label for="professor">Professor: </label>
  <input type="text" name="course[professor]" value="<%= @course.professor %>"><br>

  <label for="credits">Credits: </label>
  <input type="text" name="course[credits]" value="<%= @course.credits %>"><br>

  <input type ="submit" value="submit">
</form>